<xml>
    <files id="haxe">
        <compilerflag value="-I${haxelib:hxsdl}/vendor/include/sdl2"/>
        <compilerflag value="-I${haxelib:hxsdl}/vendor/include/sdl2_image"/>
        <compilerflag value="-I${haxelib:hxsdl}"/>
    </files>

    <target id="haxe">
        <lib name="${haxelib:hxsdl}/vendor/lib/sdl2/x64/SDL2.lib" if="windows"/>
        <lib name="${haxelib:hxsdl}/vendor/lib/sdl2_image/x64/SDL2_image.lib" if="windows"/>

        <lib name="winmm.lib" if="windows"/>
        <lib name="-lSDL2" if="linux || android"/>
        <lib name="-lSDL2_image" if="linux || android"/>

        <vflag name="-framework" value="OpenGL" if="macos || ios"/>
        <vflag name="-framework" value="SDL2" if="macos || ios"/>
        <vflag name="-framework" value="Cocoa" if="macos || ios"/>
    </target>
</xml>